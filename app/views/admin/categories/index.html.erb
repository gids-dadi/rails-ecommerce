<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Categories" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Categories</h1>
    <%= link_to "New category", new_admin_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="flex flex-col w-full">
  <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
    <div class="py-2 inline-block min-w-full">
      <div class="overflow-x-auto">

         <table class="min-w-full overflow-x-scroll h-full p-4">
              <thead class="bg-white border-b ">
                     <tr>
                       <th scope="col" class="text-xl font-medium text-gray-800 px-6 py-4 text-left">
                        <%# Image %>
                      </th>

                      <th scope="col" class="text-xl font-medium text-gray-800 px-6 py-4 text-left">
                        Name
                      </th>

                       <th scope="col" class="text-xl font-medium text-gray-800 px-6 py-4 text-left">
                        Description
                      </th>
                     </tr>
              </thead>
              <tbody>
                <% @admin_categories.each do | category | %>
                <tr class="bg-gray-50 border-b p-4">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                      <% if category.image.attached? %>
                        <%= image_tag category.image.variant(:thumb) %>
                      <% else %>
                        <%= image_tag "https://via.placeholder.com/50" %>
                      <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                   <%= link_to category.name, edit_admin_category_path(category) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                  <%= category.description%>
                  </td>
                </tr>
                <%end %>
              </tbody>
        </table>
       </div>
     </div>
   </div>
 </div>
</div>

