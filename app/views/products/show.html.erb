<h1>Product Show page</h1>
<div class="flex justify-center gap-20 py-10">
  <div class="flex flex-wrap">
    <% @product.images.each do | image | %>
    <%= image_tag image, class:"w-auto h-64 " %>
    <%end%>
  </div>

  <div class="flex flex-col item-start max-w-sm">
    <h1 class="font-bold text-4xl uppercase">
      <%= @product.name%>
    </h1>
    <p class="text-2xl mt-4">$<%=(@product.price/100.0).to_s%>
    </p>
    <p class="text-md py-8">
      <%= @product.description %>
    </p>
s
    <div class="my-8">
      <p class="uppercase text-lg">size </p>
      <% @product.stocks.each do |stock | %>
      <% if stock.amount > 0 %>
          <button value="<%=stock.size%>" class="bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
            <%= stock.size %>
          </button>
      <% else %>
         <button disabled value="<%=stock.size%>" class= "bg-gray-200 disabled:bg-gray-400 disabled:opacity-50 text-gray-800 font-semibold py-2 px-4 rounded hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 ">
            <%= stock.size %>
          </button>


      
      <% end %>  
      <% end %>
    </div>
  </div>
</div>